<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<!-- 
PARALLEL EXECUTION MODE: Methods
- Runs different test methods in parallel
- Each method runs in a separate thread
- Best for running independent test methods concurrently
- NOTE: Ensure tests are thread-safe (no shared state)
-->

<suite name="Parallel Methods Suite" verbose="2" parallel="methods" thread-count="3">
    
    <listeners>
        <listener class-name="com.seleniumjava.listeners.TestListener"/>
    </listeners>
    
    <parameter name="browser" value="chrome"/>
    <parameter name="baseUrl" value="https://www.google.com"/>
    
    <test name="Google Search Tests - Parallel Methods">
        <classes>
            <class name="com.seleniumjava.tests.GoogleSearchTest">
                <methods>
                    <!-- All three methods will run in parallel -->
                    <include name="testGoogleSearchFunctionality"/>
                    <include name="testSearchResultsCount"/>
                    <include name="testSearchPageTitle"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>
